<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="115dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_primerrow"
        app:srcCompat="@drawable/starbucks"
        tools:layout_editor_absoluteX="-1dp" />

    <LinearLayout
        android:id="@+id/textoVentas"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:translationY="100dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiendas con más ventas"
            android:textColor="#000000"


            android:textStyle="bold"
            android:translationX="5dp"
            android:translationY="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tercerrow"
        android:layout_width="413dp"
        android:layout_height="54dp"
        android:translationY="150dp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintTop_toBottomOf="@+id/textoVentas"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="204dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00704A "
            android:text="Tienda La Molina"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip7"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00704A "
            android:text="Tienda San Miguel"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#00704A "
            android:text="Tienda Miraflores"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationY="200dp"
        app:layout_constraintTop_toBottomOf="@+id/botonIrListado"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="324dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Locación"
            android:textColor="#000000"
            android:textStyle="bold"
            android:translationX="5dp" />

        <ImageButton
            android:id="@+id/imgMaps"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            app:srcCompat="@drawable/maps" />

    </LinearLayout>

    <Button
        android:id="@+id/regresarLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar sesion"
        android:translationX="130dp"
        android:translationY="591dp" />




</FrameLayout>